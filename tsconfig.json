    {
  "compilerOptions": {
    "target": "ES2020",                         
    "module": "commonjs",                      
    "outDir": "dist",                           
    "rootDir": "src",                           
    "strict": true,                             
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,  
    "skipLibCheck": true,                       
    "moduleResolution": "node",                 
    "resolveJsonModule": true,                  
    "noImplicitAny": true,                      
    "noUnusedLocals": true,                     
    "noUnusedParameters": true                 
  },
  "include": ["src"]
}
